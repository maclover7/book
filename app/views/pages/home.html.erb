<h1 class="center">Book</h1>
<p class="center">Find out information about things.</p>

<br>

<div class="row">
  <div class="col-md-4">
    <p><b> Recently Changed: </b></p>
    <% @posts.each do |post| %>
      <p> <%= link_to post.name, post %> </p>
      <hr>
    <% end %>
  </div>

  <div class="col-md-4">
    <p><b> Getting Started: </b></p>

    <p> <%= link_to "Create a new Post", new_post_path %> </p>
    <p> <%= link_to "About Book", about_path %> </p>
  </div>

  <div class="col-md-4">
    <p><b> Popular Tags: </b></p>
    <% @tags.each do |tag| %>
      <p> <%= link_to tag.name, tag_path(tag) %> | <%= Post.tagged_with(tag.name).count %> posts </p>
      <hr>
    <% end %>
  </div>
</div>
