<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<div>
  <% @post.tags.each do |tag| %>
    <h4><span class="label label-default">
      <%= link_to tag.name, tag_path(tag), :style => "color:#fff" %>
    </span></h4>
  <% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
